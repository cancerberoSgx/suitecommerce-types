{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution":"node",
    "lib": [
      "es6", "dom"
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "jsx": "react",
    "jsxFactory": "ReactLike.createElement",
    "declaration": true,
    "skipLibCheck": true
  },
  "include":["src", "spec"],
  "exclude": ["dist", "compiled", "node_modules"]
}