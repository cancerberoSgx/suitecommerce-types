{
    "name": "sc-types-frontend-extras",
    "version": "2018.1.0",
    "description": "SuiteCommerce TypeScript utilities like JSX/TSX support ",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "typings": "dist/src/index.d.ts",
    "scripts": {
        "build": "npm run clean && tsc && npm run test-build && npm run sc-tsc",
        "build-watch": "tsc -w",
        "clean": "rm -rf dist compiled compiled_ts",
        "test-run-js": "npm run build && node dist/spec",
        "test-build": "tsc -p ./tsconfig-spec.json",
        "test-sca-module-unit-test-build": "npm run build && cd sca-module-unit-test && npm i && npm run build",
        "test-run": "npx tsc && npx ts-node --project ./tsconfig-spec.json spec",
        "test": "npm run test-run && npm run test-run-js && npm run test-sca-module-unit-test-build",
        "sc-tsc": "npx sc-tsc --tsconfigFilePath ./tsconfig.json --outputFolder compiled  --addTslibJsInFolder --debug",
        "all": "npm run clean && npm run build && npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cancerberoSgx/suitecommerce-types.git"
    },
    "keywords": [
        "SuiteCommerce",
        "TypeScript",
        "NetSuite",
        "devtools",
        "types",
        "JavaScript",
        "JSX",
        "TSX",
        "React"
    ],
    "author": "Sebastian Gurin",
    "license": "MIT",
    "homepage": "https://github.com/cancerberoSgx/suitecommerce-types",
    "dependencies": {
        "misc-utils-of-mine": "0.0.4",
        "sc-types-frontend": "file:../sc-types-frontend"
    },
    "devDependencies": {
        "@types/jasmine": "^3.3.4",
        "@types/node": "^10",
        "@types/shelljs": "^0.8.1",
        "jasmine": "^3.3.1",
        "sc-tsc": "file:../ts-devtools",
        "shelljs": "^0.8.3",
        "ts-node": "^7.0.1",
        "ts-simple-ast": "^20.0.0",
        "tsd-check": "^0.2.1",
        "tslib": "^1.9.3",
        "typescript": "^3.2.2"
    }
}
