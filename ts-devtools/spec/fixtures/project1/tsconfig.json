{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution":"node",
    "lib": [
      "es2018", "dom","es2018.promise",
    ],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    // "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
    
    // "declaration": true,
  },
  "include":["src"],
  "exclude": [ "dist"]
}